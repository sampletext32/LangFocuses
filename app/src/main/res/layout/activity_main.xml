<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/MyTheme.FullScreen"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/background_menu"
        android:scaleType="fitXY"
        android:visibility="visible" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:weightSum="1920">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="80" />

        <TextView
            android:id="@+id/main_header_antifocusy"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="135"
            android:ellipsize="none"
            android:fontFamily="@font/fk_mandarin"
            android:gravity="center"
            android:singleLine="true"
            android:text="Антифокусы"
            android:textColor="#574435"
            android:textSize="45sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="10" />

        <TextView
            android:id="@+id/main_header_yazyka"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="135"
            android:ellipsize="none"
            android:fontFamily="@font/fk_mandarin"
            android:gravity="center"
            android:singleLine="true"
            android:text="языка"
            android:textColor="#574435"
            android:textSize="45sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="800"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1080">

            <FrameLayout
                android:id="@+id/schedule_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="800"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/schedule_progressbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>

                <ImageView
                    android:id="@+id/schedule_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    android:background="#00000000"
                    android:scaleType="fitCenter" />


                <TextView
                    android:id="@+id/schedule_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_gravity="center_vertical"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:textSize="18sp" />
            </FrameLayout>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="22" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="169"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1080">

            <Button
                android:id="@+id/btn_how_to_use"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="800"
                android:background="@drawable/rounded"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/how_to_use"
                android:textAllCaps="false"
                android:textColor="#574435"
                android:textSize="22.5sp" />
        </LinearLayout>


        <Space
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="44" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="169"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1080">

            <Button
                android:id="@+id/btn_choose_deck"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="800"
                android:background="@drawable/rounded"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/choose_deck"
                android:textAllCaps="false"
                android:textColor="#574435"
                android:textSize="22.5sp" />
        </LinearLayout>


        <Space
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="44" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="169"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1080">

            <Button
                android:id="@+id/btn_about"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="800"
                android:background="@drawable/rounded"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/about"
                android:textAllCaps="false"
                android:textColor="#574435"
                android:textSize="22.5sp" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>